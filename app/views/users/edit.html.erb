

<div class = "container">
 <div class = "row" >
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>Edit user</h2>

 <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being save:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @user, local:true do |f| %>
  <div class = "form-group">
   <%= f.label :name %>
   <%= f.text_field :name, autofocus: true, class: "form-control name"%>
  </div>
  <div class = "form-group">
   <%= f.label :image %>
   <%= f.file_field :profile_image, class: "form-control-file profile_image" %>
  </div>
  <div class = "form-group">
   <%= f.label :introduction %>
   <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class = "form-group">
   <%= f.submit class: "btn btn-secondary" %>
  </div>
 <% end %>
  </div>
 </div>
</div>